class Solution {
    public boolean isPalindrome(int x) {
        
        if (x < 0 || (x % 10 == 0 && x != 0)) {
            return false;
        }
        
        int saveValue = x;
        int newNum = 0;
        
        while (x > 0) {
            newNum = newNum * 10 + x % 10;
            x /= 10;
        }
        
        return newNum == saveValue;
    }
}